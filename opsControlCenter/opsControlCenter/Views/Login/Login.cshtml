@model opsControlCenter.Models.Usuario

@{
    //Layout = null;
}


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-horizontal">
            <h4>Usuario</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2" for="USR_LOGIN">Nombre</label>
                <div class="col-md-10">        
                    @Html.EditorFor(model => model.USR_LOGIN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.USR_LOGIN, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <label class="control-label col-md-2" for="USR_PASSWORD">Contraseña</label>
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.USR_PASSWORD, new { @class = "form-control" } )
                    @Html.ValidationMessageFor(model => model.USR_PASSWORD, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </div>
            <div>
                @ViewBag.UsuarioNoValido
            </div>
        </div>
    }
